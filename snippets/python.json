	"Test following the Arrange, Act and Assert pattern": {
		"prefix": "aaaTest",
		"body": [
			"def test_$1(self):",
			"    $BLOCK_COMMENT_START",
			"    should ${2:do .. when ..}",
			"    $BLOCK_COMMENT_END",
			"    ",
			"    # Arrange",
			"    $3",
			"    # Act",
			"    $4",
			"    # Assert",
			"    $0"
		]
	},
	"class": {
		"prefix": "class",
		"body": [
			"class $1:",
			"    def __init__(self$2):",
			"        $0"
		]
	},
	"Unittest base": {
		"prefix": "unittest",
		"body": [
			"import unittest",
			"",
			"class $1Test(unittest.TestCase):",
			"    $0"
		]
	}
}

/*************************
 *
 *    GGGGGG  II TTTTTTTT
 *   GG       II    TT
 *   GG   GGG II    TT
 *   GG    GG II    TT
 *    GGGGGG  II    TT
 *
 *************************/
{
    /************
     * Self added
     ************/
    "zenMode.centerLayout": false,
    "cSpell.enableFiletypes": [
        "dart",
        "shellscript"
    ],
    "editor.acceptSuggestionOnEnter": "off",
    "cSpell.userWords": [
        "pacman",
        "sublist",
        "summands",
        "surjective",
        "unoriented",
        "valent"
    ],
    // This turns off alt key menu bar shortcuts
    "window.enableMenuBarMnemonics": false,
    // To not conflict with alt key for "Go to Definition" or "Open Link"
    "editor.multiCursorModifier": "ctrlCmd",
    // Do not collapse folders with only one folder
    "explorer.compactFolders": false,
    // Add new line at the end when saving
    "files.insertFinalNewline": true,
    // Delete trailing white space when saving
    "files.trimTrailingWhitespace": true,
    "[python]": {
        // PEP 8 maximum line length
        "editor.rulers": [79],
    },
    // Dont restore terminal sessions
    "terminal.integrated.persistentSessionReviveProcess": "never",
    "terminal.integrated.enablePersistentSessions": false,
    "[html]": {
        "editor.suggest.insertMode": "replace",
        "editor.tabSize": 2
    },
    "[latex]": {
        "editor.formatOnPaste": false,
        "editor.suggestSelection": "recentlyUsedByPrefix",
        "editor.minimap.enabled": false,
        "editor.wordWrap": "on"
    },
    "[rust]": {
        "editor.formatOnSave": true
    },
    "latex-workshop.latex.tools": [
        {
            "name": "latexmk",
            "command": "latexmk",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-pdf",
                "-outdir=%OUTDIR%",
                "%DOC%",
                "--shell-escape"
            ],
            "env": {}
        },
        {
            "name": "lualatexmk",
            "command": "latexmk",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-lualatex",
                "-outdir=%OUTDIR%",
                "%DOC%"
            ],
            "env": {}
        },
        {
            "name": "latexmk_rconly",
            "command": "latexmk",
            "args": [
                "%DOC%"
            ],
            "env": {}
        },
        {
            "name": "pdflatex",
            "command": "pdflatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "%DOC%"
            ],
            "env": {}
        },
        {
            "name": "bibtex",
            "command": "bibtex",
            "args": [
                "%DOCFILE%"
            ],
            "env": {}
        },
        {
            "name": "rnw2tex",
            "command": "Rscript",
            "args": [
                "-e",
                "knitr::opts_knit$set(concordance = TRUE); knitr::knit('%DOCFILE_EXT%')"
            ],
            "env": {}
        },
        {
            "name": "jnw2tex",
            "command": "julia",
            "args": [
                "-e",
                "using Weave; weave(\"%DOC_EXT%\", doctype=\"tex\")"
            ],
            "env": {}
        },
        {
            "name": "jnw2texmintex",
            "command": "julia",
            "args": [
                "-e",
                "using Weave; weave(\"%DOC_EXT%\", doctype=\"texminted\")"
            ],
            "env": {}
        },
        {
            "name": "tectonic",
            "command": "tectonic",
            "args": [
                "--synctex",
                "--keep-logs",
                "%DOC%.tex"
            ],
            "env": {}
        }
    ],
    /*******
     * Theme
     *******/
    "workbench.colorTheme": "Community Material Theme Darker",
    "workbench.colorCustomizations": {
        "[Community Material Theme Darker]": {
            "statusBar.debuggingBackground": "#212121",
            // Make sure that the ".vimrc" has
            // `set background=dark`
            // for the following colors to look good.
            "terminal.background": "#212121",
            "terminal.selectionBackground": "#101010",
            "terminalCursor.foreground": "#FFFFFF",
            "terminalCursor.background": "#000000",
            // Other colors
            "terminal.foreground":"#FFFFFF",
            "terminal.ansiBlack":"#000000",
            "terminal.ansiBrightBlack":"#555555",
            "terminal.ansiRed":"#AA0000",
            "terminal.ansiBrightRed":"#FF5555",
            "terminal.ansiGreen":"#00AA00",
            "terminal.ansiBrightGreen":"#55FF55",
            "terminal.ansiYellow":"#AA5500",
            "terminal.ansiBrightYellow":"#FFFF55",
            "terminal.ansiBlue":"#0000AA",
            "terminal.ansiBrightBlue":"#5555FF",
            "terminal.ansiMagenta":"#AA00AA",
            "terminal.ansiBrightMagenta":"#FF55FF",
            "terminal.ansiCyan":"#00AAAA",
            "terminal.ansiBrightCyan":"#55FFFF",
            "terminal.ansiWhite":"#AAAAAA",
            "terminal.ansiBrightWhite":"#FFFFFF"
        }
    },
    "workbench.iconTheme": "material-icon-theme",
    "material-icon-theme.folders.associations": {
        "features": "other",
        "domain": "rules",
        "entities": "class",
        "presentation": "layout",
        "bloc": "controller",
        "fixtures": "config"
    },
    "material-icon-theme.files.associations": {
        ".gitkeep": "template"
    },
    /**************
     * Editor added
     **************/
    "[dart]": {
        "editor.formatOnSave": true,
        "editor.formatOnType": true,
        "editor.rulers": [
            80
        ],
        "editor.selectionHighlight": false,
        "editor.suggest.snippetsPreventQuickSuggestions": false,
        "editor.suggestSelection": "first",
        "editor.tabCompletion": "onlySnippets",
        "editor.wordBasedSuggestions": false
    },
    "dart.debugExternalPackageLibraries": false,
    "dart.debugSdkLibraries": false,
    "files.associations": {
        "*.h": "c",
        "*.heex": "html"
    },
    "todo-tree.general.tags": [
        "BUG",
        "HACK",
        "FIXME",
        "TODO",
        "XXX",
        "[ ]",
        "[x]"
    ],
    "todo-tree.regex.regex": "(//|#|<!--|;|/\\*|^|^\\s*(-|\\d+.))\\s*($TAGS)",
    "latex-workshop.view.pdf.viewer": "tab",
    "latex-workshop.view.pdf.internal.synctex.keybinding": "double-click",
    "latex-workshop.intellisense.triggers.latex": [
        "{",
        "$"
    ],
    "diffEditor.renderSideBySide": false
}
